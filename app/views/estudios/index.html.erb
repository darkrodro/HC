<%end%>
<tr id="estudios_footer">
	<td colspan="3" class="admin_tabla_footer">
		<%= button_to 'Nuevo Estudio', new_estudio_path, :remote=>true %>
	</td>
</tr>
</table>

<%=render 'shared/popup'%>