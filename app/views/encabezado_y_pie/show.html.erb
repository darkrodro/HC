<%= javascript_include_tag "tiny_mce/tiny_mce.js" %>
<script language="javascript">
	tinyMCE.init({
		theme : "advanced",
		mode : "textareas",
		plugins : "legacyoutput",
		theme_advanced_buttons1 : "bold,italic,underline,strikethrough,|, justifyleft, justifycenter,justifyright,justifyfull,|,fontsizeselect",
		theme_advanced_buttons2 : "",
		theme_advanced_buttons3 : "",
		valid_elements : "b/strong,em/i,strikethrough/strike,u,p[align],-div,-font[size]",
		cleanup_on_startup : true,
		theme_advanced_toolbar_location : "top",
		convert_newlines_to_brs : false
		});
</script>

<%= form_for(@eyp, :url=>encabezado_y_pie_path) do |f| %>
	<div class="admin_titulo">
		<%= f.label :encabezado %>
	</div>
	<div class="eyp">
		<%= f.text_area :encabezado, :class=>'eyp' %>
	</div>
	<div class="admin_titulo">
		<%= f.label :pie %>
	</div>
	<div class="eyp">
		<%= f.text_area :pie, :class=>'eyp' %>
	</div>
	<p id="notice"><%= @notice %></p>
	<div class="actions" style="margin-right:10px;float:right">
		<%= f.submit 'Guardar'%>
	</div>
<%end%>
<div class="actions" style="margin-right:10px;float:right">
	<%= button_to 'Ver PDF', encabezado_y_pie_path(:format=>:pdf), :method=>:get%>
</div>